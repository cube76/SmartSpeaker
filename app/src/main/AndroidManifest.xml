<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mqa.smartspeaker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_indi"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".ui.device.lamp.LampActivity"></activity>
        <activity android:name=".ui.connectSmartSpeaker.ConnectSmartSpeakerActivity" />
        <activity android:name=".ui.detailSmartSpeaker.DetailSmartSpeakerActivity" />
        <activity android:name=".ui.splashScreen.videoSplash.VideoSplashActivity" />
        <activity android:name=".ui.splashScreen.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.forgetPassword.ForgetPasswordActivity" />
        <activity android:name=".ui.emailVerification.EmailVerificationActivity" />
        <activity android:name=".ui.forgetPassword.inputCode.InputCodeActivity" />
        <activity android:name=".ui.forgetPassword.inputEmail.InputEmailActivity" />
        <activity android:name=".ui.forgetPassword.renewPassword.RenewPasswordActivity" />
        <activity android:name=".ui.pairing.PairingActivity" />
        <activity android:name=".ui.intro.Intro2Activity" /> <!-- <activity android:name=".ui.intro.IntroActivity"> -->
        <!-- </activity> -->
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>